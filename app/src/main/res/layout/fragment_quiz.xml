<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:padding="@dimen/d1">

    <TextView
        android:id="@+id/tv_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d6"
        android:text="Какой язык программирования вам нравится или хотели бы изучить?"
        android:textAlignment="center"
        android:textColor="@color/colorDefaultWhite"
        android:textSize="21sp"
        tools:text="1.Какой язык программирования вам нравится или хотели бы изучить?" />

    <LinearLayout
        android:id="@+id/container_answers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="vertical">

    </LinearLayout>

</LinearLayout>